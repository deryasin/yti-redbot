[Unit]
Description=%I redbot
After=multi-user.target
After=network-online.target
Wants=network-online.target

[Service]
ExecStart=/usr/bin/python3 -O -m redbot %I --no-prompt --mentionable --no-cogs --load-cogs $cogs
EnvironmentFile=/etc/systemd/system/redbot@%I.conf
User=redbot
Group=redbot
Type=idle
Restart=always
RestartSec=15
RestartPreventExitStatus=0
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target

